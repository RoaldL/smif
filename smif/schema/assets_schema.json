{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Pre Specified Planning",
    "description": "List of pre-specified planning instructions",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "asset_type": {
                "type": "string"
            },
            "capital_cost": {
                "$ref": "#/definitions/measured_value"
            },
            "operational_lifetime": {
                "$ref": "#/definitions/measured_value"
            },
            "economic_lifetime": {
                "$ref": "#/definitions/measured_value"
            }
        },
        "required": ["asset_type", "capital_cost", "operational_lifetime", "economic_lifetime"]
    },
    "definitions": {
        "measured_value": {
            "type": "object",
            "properties": {
                "units": {
                    "type": "string"
                }
            },
            "required": ["value", "units"]
        }
    }
}
